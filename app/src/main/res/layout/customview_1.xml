<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/button_sub"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:src="@android:drawable/ic_menu_info_details"/>
    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@android:drawable/ic_menu_add"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:layout_marginRight="@dimen/default_margin_medium"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button_sub"
        android:layout_toLeftOf="@+id/button_add"
        android:textSize="@dimen/default_textsize_medium"
        tools:text="Counter here"/>
</RelativeLayout>